---
import PageLayout from '@layouts/PageLayout.astro';
import HeroSimple from '@components/sections/HeroSimple.astro';
import JsonLd from '@components/seo/JsonLd.astro';
import { offices } from '@data/offices';
import { site, organizationSchema } from '@data/site';
import Button from '@components/ui/Button.astro';

const locale = 'sv';

const localBusinessSchemas = offices.map((office) => ({
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: `${organizationSchema.name} ${office.city}`,
  url: site.url,
  telephone: office.phone,
  email: office.email,
  address: {
    '@type': 'PostalAddress',
    streetAddress: office.address,
    addressLocality: office.city,
    postalCode: office.postalCode.split(' ').slice(0, 2).join(' '),
    addressCountry: 'SE',
  },
  parentOrganization: {
    '@type': 'Organization',
    name: organizationSchema.name,
    url: organizationSchema.url,
  },
}));
---

<PageLayout title="Kontakt" description="Kontakta Verit för en kostnadsfri genomgång av er cybersäkerhet och compliance." locale={locale}>
  {localBusinessSchemas.map((schema) => (
    <JsonLd schema={schema} />
  ))}

  <HeroSimple
    title="Kontakta oss"
    description="Vi berättar gärna mer om hur vi kan hjälpa er organisation. Boka ett kostnadsfritt möte eller hör av er direkt."
    breadcrumbs={[{ label: 'Kontakt' }]}
    locale={locale}
  />

  <section class="section">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div data-reveal>
          <h2 class="mb-2" id="kontaktformular">Skicka ett meddelande</h2>
          <p class="text-gray mb-8">Fyll i formuläret så återkommer vi inom 24 timmar.</p>

          <form id="contact-form" class="space-y-5" action="/api/contact" method="POST" novalidate>
            <!-- Locale -->
            <input type="hidden" name="locale" value="sv" />
            <!-- Honeypot -->
            <div class="hidden" aria-hidden="true">
              <label for="website">Lämna detta fält tomt</label>
              <input type="text" id="website" name="website" tabindex="-1" autocomplete="off" />
            </div>

            <div class="grid sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium text-navy mb-1.5">Namn <span class="text-red-500">*</span></label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  autocomplete="name"
                  class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors"
                  placeholder="Ditt namn"
                  aria-describedby="name-error"
                />
                <p id="name-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-navy mb-1.5">Organisation <span class="text-red-500">*</span></label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  required
                  autocomplete="organization"
                  class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors"
                  placeholder="Er organisation"
                  aria-describedby="company-error"
                />
                <p id="company-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-navy mb-1.5">E-post <span class="text-red-500">*</span></label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors"
                placeholder="namn@organisation.se"
                aria-describedby="email-error"
              />
              <p id="email-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-navy mb-1.5">Telefon</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                autocomplete="tel"
                class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors"
                placeholder="+46 70 000 00 00"
                aria-describedby="phone-error"
              />
              <p id="phone-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-navy mb-1.5">Intresseområde <span class="text-red-500">*</span></label>
              <select
                id="service"
                name="service"
                required
                class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors"
                aria-describedby="service-error"
              >
                <option value="">Välj område</option>
                <option value="nis2">NIS2 / Cybersäkerhetslagen</option>
                <option value="iso27001">ISO 27001 / LIS</option>
                <option value="ciso">CISO-as-a-Service</option>
                <option value="riskhantering">Riskhantering</option>
                <option value="utbildning">Utbildning & Awareness</option>
                <option value="gdpr">GDPR & Dataskydd</option>
                <option value="securapilot">Securapilot</option>
                <option value="annat">Annat</option>
              </select>
              <p id="service-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-navy mb-1.5">Meddelande</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="field-input w-full px-4 py-3 rounded-lg border border-border bg-white text-slate focus:border-accent-dark focus:ring-2 focus:ring-accent-dark/20 transition-colors resize-y"
                placeholder="Berätta kort om er situation och hur vi kan hjälpa..."
              ></textarea>
            </div>

            <div>
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="gdpr"
                  name="gdpr"
                  required
                  class="mt-1 h-4 w-4 rounded border-border text-accent-dark focus:ring-accent-dark/20"
                  aria-describedby="gdpr-error"
                />
                <label for="gdpr" class="text-sm text-gray leading-relaxed">
                  Jag samtycker till att Verit behandlar mina personuppgifter enligt
                  <a href="/integritetspolicy" class="text-accent-dark hover:underline">integritetspolicyn</a>. <span class="text-red-500">*</span>
                </label>
              </div>
              <p id="gdpr-error" class="field-error hidden mt-1.5 text-sm text-red-600" role="alert"></p>
            </div>

            <Button variant="primary" size="lg">
              Skicka meddelande
            </Button>
          </form>

          <!-- Form status messages -->
          <div id="form-success" class="hidden mt-8 p-6 bg-teal/10 border border-teal/20 rounded-xl text-center">
            <svg class="w-12 h-12 text-teal mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-lg font-semibold text-navy mb-1">Tack för ditt meddelande!</h3>
            <p class="text-sm text-gray">Vi återkommer till dig inom 24 timmar.</p>
          </div>

          <div id="form-error" class="hidden mt-8 p-6 bg-red-50 border border-red-200 rounded-xl text-center">
            <h3 class="text-lg font-semibold text-navy mb-1">Något gick fel</h3>
            <p class="text-sm text-gray">Försök igen eller kontakta oss direkt via e-post.</p>
          </div>
        </div>

        <!-- Offices -->
        <div data-reveal="right">
          <h2 class="mb-2">Kontaktuppgifter</h2>
          <p class="text-gray mb-8">Vi finns i Vänersborg och arbetar med kunder i hela Sverige.</p>

          <div class="space-y-6">
            {offices.map((office) => (
              <div class="bg-surface rounded-xl p-6 border border-border">
                <h3 class="text-xl font-semibold text-navy mb-3">{office.city}</h3>
                <div class="space-y-2 text-sm text-gray">
                  <p class="flex items-center gap-2">
                    <svg aria-hidden="true" class="w-4 h-4 text-accent-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    {office.address}, {office.postalCode}
                  </p>
                  <p class="flex items-center gap-2">
                    <svg aria-hidden="true" class="w-4 h-4 text-accent-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                    {office.phone}
                  </p>
                  <p class="flex items-center gap-2">
                    <svg aria-hidden="true" class="w-4 h-4 text-accent-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                    <a href={`mailto:${office.email}`} class="text-accent-dark hover:text-accent-dark transition-colors">
                      {office.email}
                    </a>
                  </p>
                </div>
              </div>
            ))}
          </div>

          <div class="mt-8 p-6 bg-navy-dark rounded-xl">
            <h3 class="text-lg font-semibold mb-2 text-white">Boka ett möte direkt</h3>
            <p class="text-sm text-white/60 mb-4">
              Föredrar du att prata direkt? Boka en 30-minuters kostnadsfri genomgång.
            </p>
            <Button href="#kontaktformular" variant="primary">
              Boka tid
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement | null;
    if (!form) return;

    const successEl = document.getElementById('form-success');
    const errorEl = document.getElementById('form-error');

    const EMAIL_RE = /^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/;
    const PHONE_RE = /^[\d\s\-+().]{7,20}$/;
    const VALID_SERVICES = ['nis2','iso27001','ciso','riskhantering','utbildning','gdpr','securapilot','annat'];

    // Track which fields have been touched (blurred at least once)
    const touched = new Set<string>();
    // Track which fields currently have errors (for "reward early" pattern)
    const hasError = new Set<string>();

    type Rule = { check: () => boolean; message: string };
    const rules: Record<string, Rule[]> = {
      name: [
        { check: () => val('name').length >= 2, message: 'Ange ditt namn (minst 2 tecken).' },
      ],
      company: [
        { check: () => val('company').length >= 2, message: 'Ange organisationens namn.' },
      ],
      email: [
        { check: () => val('email').length > 0, message: 'Ange din e-postadress.' },
        { check: () => EMAIL_RE.test(val('email')), message: 'Ange en giltig e-postadress, t.ex. namn@företag.se' },
      ],
      phone: [
        { check: () => val('phone').length === 0 || PHONE_RE.test(val('phone')), message: 'Ange ett giltigt telefonnummer, t.ex. +46 70 123 45 67' },
      ],
      service: [
        { check: () => VALID_SERVICES.includes(val('service')), message: 'Välj ett intresseområde.' },
      ],
      gdpr: [
        { check: () => (form.querySelector('#gdpr') as HTMLInputElement).checked, message: 'Du behöver godkänna behandlingen av personuppgifter.' },
      ],
    };

    function val(name: string): string {
      const el = form!.elements.namedItem(name) as HTMLInputElement | HTMLSelectElement | null;
      return el?.value.trim() ?? '';
    }

    function showError(fieldName: string, message: string) {
      const errorEl = document.getElementById(`${fieldName}-error`);
      const input = form!.elements.namedItem(fieldName) as HTMLElement | null;
      if (errorEl) {
        errorEl.textContent = message;
        errorEl.classList.remove('hidden');
      }
      if (input) {
        input.classList.remove('border-border', 'focus:border-accent-dark', 'focus:ring-accent-dark/20');
        input.classList.add('border-red-400', 'focus:border-red-500', 'focus:ring-red-200/40');
      }
      hasError.add(fieldName);
    }

    function clearError(fieldName: string) {
      const errorEl = document.getElementById(`${fieldName}-error`);
      const input = form!.elements.namedItem(fieldName) as HTMLElement | null;
      if (errorEl) {
        errorEl.textContent = '';
        errorEl.classList.add('hidden');
      }
      if (input) {
        input.classList.remove('border-red-400', 'focus:border-red-500', 'focus:ring-red-200/40');
        input.classList.add('border-border', 'focus:border-accent-dark', 'focus:ring-accent-dark/20');
      }
      hasError.delete(fieldName);
    }

    function validateField(fieldName: string): boolean {
      const fieldRules = rules[fieldName];
      if (!fieldRules) return true;

      for (const rule of fieldRules) {
        if (!rule.check()) {
          showError(fieldName, rule.message);
          return false;
        }
      }
      clearError(fieldName);
      return true;
    }

    // Blur: validate only if field has content or was previously in error
    // (don't punish empty required fields until submit)
    function onBlur(e: Event) {
      const target = e.target as HTMLInputElement | HTMLSelectElement;
      const name = target.name;
      if (!rules[name]) return;
      touched.add(name);

      const isEmpty = target.type === 'checkbox'
        ? !(target as HTMLInputElement).checked
        : target.value.trim() === '';

      // Only validate on blur if field has content or already has error
      if (!isEmpty || hasError.has(name)) {
        validateField(name);
      }
    }

    // Input: only re-validate if field already has an error ("reward early")
    function onInput(e: Event) {
      const target = e.target as HTMLInputElement | HTMLSelectElement;
      const name = target.name;
      if (hasError.has(name)) {
        validateField(name);
      }
    }

    // Attach listeners to all validated fields
    for (const fieldName of Object.keys(rules)) {
      const el = form.elements.namedItem(fieldName) as HTMLElement | null;
      if (!el) continue;
      el.addEventListener('blur', onBlur);
      el.addEventListener('input', onInput);
      if (el instanceof HTMLSelectElement) {
        el.addEventListener('change', onInput);
      }
      if ((el as HTMLInputElement).type === 'checkbox') {
        el.addEventListener('change', onInput);
      }
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl?.classList.add('hidden');
      errorEl?.classList.add('hidden');

      // Validate all fields
      let firstErrorField: string | null = null;
      for (const fieldName of Object.keys(rules)) {
        touched.add(fieldName);
        if (!validateField(fieldName) && !firstErrorField) {
          firstErrorField = fieldName;
        }
      }

      if (firstErrorField) {
        const el = form.elements.namedItem(firstErrorField) as HTMLElement | null;
        el?.focus();
        return;
      }

      const submitBtn = form.querySelector('button[type="submit"], .btn') as HTMLButtonElement | null;
      const originalText = submitBtn?.textContent ?? '';
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Skickar...';
      }

      try {
        const response = await fetch(form.action, {
          method: 'POST',
          body: new FormData(form),
        });

        if (response.ok) {
          form.classList.add('hidden');
          successEl?.classList.remove('hidden');
        } else {
          const data = await response.json().catch(() => null);
          // Show field-specific errors from backend
          if (data?.fields) {
            let focused = false;
            for (const [field, msg] of Object.entries(data.fields)) {
              showError(field, msg as string);
              if (!focused) {
                (form.elements.namedItem(field) as HTMLElement | null)?.focus();
                focused = true;
              }
            }
          } else {
            throw new Error(data?.error || 'Submission failed');
          }
        }
      } catch {
        errorEl?.classList.remove('hidden');
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      }
    });
  }

  initContactForm();
  document.addEventListener('astro:after-swap', initContactForm);
</script>
