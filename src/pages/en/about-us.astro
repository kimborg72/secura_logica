---
import PageLayout from '@layouts/PageLayout.astro';
import HeroSimple from '@components/sections/HeroSimple.astro';
import CTABanner from '@components/sections/CTABanner.astro';
import Button from '@components/ui/Button.astro';
import { getContactPath } from '@i18n/routes';

const locale = 'en';

const values = [
  {
    title: 'Integrity',
    description: 'We work with sensitive information and complex issues. Trust is the foundation of everything we do.',
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
  {
    title: 'Pragmatism',
    description: 'Compliance should work in practice, not just on paper. We deliver measures that make a real difference.',
    icon: 'M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z',
  },
  {
    title: 'Long-term commitment',
    description: 'We build relationships and solutions that last. Your security efforts should improve every year.',
    icon: 'M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z',
  },
];

const milestones = [
  { year: '2014', title: 'VER&IT founded', description: 'Kim Borg starts VER&IT AB in Vanersborg, focusing on IT consulting, systems development and security-focused digital services.' },
  { year: '2020', title: 'Information security in focus', description: 'With over 25 years of experience as an IT leader and Group CIO, the focus deepens towards information security, compliance and risk management.' },
  { year: '2024', title: 'NIS2 & the Cybersecurity Act', description: 'Repositioning towards critical infrastructure organisations. Specialist advisory in NIS2, ISO 27001 and the Cybersecurity Act.' },
  { year: '2026', title: 'Securapilot launches', description: 'The GRC platform Securapilot launches — compliance becomes actionable with structured decision flows, risk management and real-time monitoring.' },
];
---

<PageLayout title="About us" description="Verit are specialists in cybersecurity and compliance for critical infrastructure organisations." locale={locale}>
  <HeroSimple
    title="About Verit"
    description="We exist to help critical infrastructure organisations protect their information and meet regulatory requirements — for real."
    breadcrumbs={[{ label: 'About us' }]}
    locale={locale}
  />

  <!-- Story -->
  <section class="section">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div data-reveal>
          <p class="overline mb-4">Our story</p>
          <h2 class="mb-6">From IT leadership to specialist advisory</h2>
          <p class="text-lg text-slate leading-relaxed mb-4">
            VER&IT was founded in 2014 by Kim Borg in Vanersborg, with over 25 years of experience
            as a systems developer, Scrum Master, CIO and Group CIO in both the public
            and private sector.
          </p>
          <p class="text-gray leading-relaxed mb-4">
            We have seen the challenges from the inside — from board decisions to operational implementation.
            That experience has shaped our conviction: compliance is not a shield to hide behind,
            but a lens that reveals whether risk decisions hold up.
          </p>
          <p class="text-gray leading-relaxed">
            With Securapilot as our own GRC platform, we offer something unique: a combination of
            hands-on advisory and a tool that transforms fragmented security work into
            structured, traceable and defensible decision flows.
          </p>
        </div>

        <!-- Timeline -->
        <div class="space-y-8" data-reveal="right">
          {milestones.map((milestone) => (
            <div class="flex gap-6">
              <div class="shrink-0">
                <span class="inline-block px-3 py-1 bg-accent/15 text-accent-dark text-sm font-bold rounded-lg">
                  {milestone.year}
                </span>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-navy mb-1">{milestone.title}</h3>
                <p class="text-gray text-sm">{milestone.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Founder -->
  <section class="section bg-surface">
    <div class="container">
      <div class="max-w-3xl mx-auto flex flex-col md:flex-row items-center gap-10" data-reveal>
        <div class="shrink-0">
          <img
            src="/images/team/kim_green_bg.png"
            alt="Kim Borg, Founder & CEO"
            class="w-48 h-48 object-cover rounded-full"
          />
        </div>
        <div>
          <p class="overline mb-2">Founder & CEO</p>
          <h2 class="mb-3">Kim Borg</h2>
          <p class="text-gray leading-relaxed mb-4">
            25+ years of experience in IT leadership — from systems developer and Scrum Master to CIO and Group CIO. Deep expertise in ISO 27001, NIS2, risk management and information security governance.
          </p>
          <a href="https://linkedin.com/in/kimborg" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-sm font-medium text-accent-dark hover:underline">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="section bg-surface">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-16" data-reveal>
        <p class="overline mb-3">Values</p>
        <h2>What we stand for</h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {values.map((value, i) => (
          <div class="text-center" data-reveal data-delay={String(i + 1)}>
            <div class="w-14 h-14 flex items-center justify-center rounded-xl bg-accent/15 text-accent-dark mx-auto mb-5">
              <svg aria-hidden="true" class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d={value.icon} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-navy mb-3">{value.title}</h3>
            <p class="text-gray leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    title="Want to know more?"
    description="We would be happy to tell you more about how we can help your organisation."
    locale={locale}
  />
</PageLayout>
