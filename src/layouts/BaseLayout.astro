---
import { ClientRouter } from 'astro:transitions';
import BaseHead from '@components/seo/BaseHead.astro';
import type { Locale } from '@i18n/types';
import '@styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  locale?: Locale;
}

const { title, description, ogImage, locale = 'sv' } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <BaseHead title={title} description={description} ogImage={ogImage} locale={locale} />
    <ClientRouter />
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>
