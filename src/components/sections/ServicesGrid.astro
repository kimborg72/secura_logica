---
import ServiceCard from '@components/ui/ServiceCard.astro';

const services = [
  {
    title: 'NIS2 / Cybersäkerhetslagen',
    description: 'Gap-analys och implementeringsstöd för NIS2-direktivet och den svenska cybersäkerhetslagen.',
    href: '/tjanster/nis2',
  },
  {
    title: 'ISO 27001 / LIS',
    description: 'Uppbyggnad och certifieringsstöd för ledningssystem för informationssäkerhet.',
    href: '/tjanster/iso27001',
  },
  {
    title: 'CISO-as-a-Service',
    description: 'Interim säkerhetsansvarig som ger er strategisk styrning utan fast anställning.',
    href: '/tjanster/ciso-as-a-service',
  },
  {
    title: 'Riskhantering & Klassificering',
    description: 'Systematisk riskanalys och informationsklassificering anpassad efter er verksamhet.',
    href: '/tjanster/riskhantering',
  },
  {
    title: 'Utbildning & Awareness',
    description: 'Skräddarsydda utbildningar som höjer säkerhetsmedvetandet i hela organisationen.',
    href: '/tjanster/utbildning',
  },
  {
    title: 'GDPR & Dataskydd',
    description: 'Praktisk rådgivning för att uppfylla dataskyddsförordningens krav i er verksamhet.',
    href: '/tjanster/gdpr',
  },
];
---

<section class="section">
  <div class="container">
    <div class="text-center max-w-2xl mx-auto mb-16" data-reveal>
      <p class="overline mb-3">Tjänster</p>
      <h2>Cybersäkerhet & compliance i praktiken</h2>
      <p class="lead mt-4">
        Vi täcker hela kedjan — från regelverkstolkning och gap-analys till implementering och löpande uppföljning.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service, i) => (
        <div data-reveal data-delay={String((i % 3) + 1)}>
          <ServiceCard
            title={service.title}
            description={service.description}
            href={service.href}
          />
        </div>
      ))}
    </div>
  </div>
</section>
