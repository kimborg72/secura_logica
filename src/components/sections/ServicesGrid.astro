---
import { getCollection } from 'astro:content';
import ServiceCard from '@components/ui/ServiceCard.astro';

const services = (await getCollection('services')).sort((a, b) => a.data.order - b.data.order);
---

<section class="section">
  <div class="container">
    <div class="text-center max-w-2xl mx-auto mb-16" data-reveal>
      <p class="overline mb-3">Tjänster</p>
      <h2>Cybersäkerhet & compliance i praktiken</h2>
      <p class="lead mt-4">
        Vi täcker hela kedjan — från regelverkstolkning och gap-analys till implementering och löpande uppföljning.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service, i) => (
        <div data-reveal data-delay={String((i % 3) + 1)}>
          <ServiceCard
            title={service.data.title}
            description={service.data.excerpt}
            href={`/tjanster/${service.data.slug}`}
          />
        </div>
      ))}
    </div>
  </div>
</section>
