---
import Tabs from '@components/ui/Tabs.astro';

const industries = [
  {
    id: 'offentlig',
    label: 'Offentlig sektor',
    title: 'Myndigheter, kommuner & regioner',
    description: 'Offentlig sektor står inför skärpta krav genom NIS2, säkerhetsskyddslagen och den nya cybersäkerhetslagen. Vi hjälper myndigheter, kommuner och regioner att bygga systematiskt informationssäkerhetsarbete som uppfyller kraven och skyddar samhällsviktiga funktioner.',
    challenges: ['NIS2 / Cybersäkerhetslagen', 'Säkerhetsskydd', 'Informationsklassificering', 'GDPR i offentlig verksamhet'],
  },
  {
    id: 'energi',
    label: 'Energi',
    title: 'Energiproduktion & distribution',
    description: 'Energisektorn är en av de mest reglerade branscherna under NIS2. Från kraftproducenter till nätoperatörer — kraven på cybersäkerhet och incidentrapportering är höga. Vi har erfarenhet av att arbeta med energibolag som behöver balansera driftsäkerhet med regulatorisk efterlevnad.',
    challenges: ['NIS2 för energisektorn', 'OT/IT-säkerhet', 'Incidentrapportering', 'Risk- och sårbarhetsanalys'],
  },
  {
    id: 'industri',
    label: 'Industri',
    title: 'Tillverkande industri & automotive',
    description: 'Tillverkande industri möter nya krav genom NIS2 och leverantörskedjans säkerhetskrav. Vi hjälper industriföretag att integrera informationssäkerhet i befintliga ledningssystem och säkerställa compliance genom hela värdekedjan.',
    challenges: ['Supply chain security', 'ISO 27001-certifiering', 'NIS2 för tillverkning', 'Integrationssäkerhet'],
  },
  {
    id: 'ehalsa',
    label: 'E-hälsa',
    title: 'Vård, omsorg & e-hälsa',
    description: 'Hälso- och sjukvården hanterar bland de mest känsliga personuppgifterna som finns. Digitaliseringen skapar nya möjligheter men också nya sårbarheter. Vi stödjer vårdgivare och e-hälsobolag med säkerhet som skyddar patienter utan att bromsa innovation.',
    challenges: ['Patientdatasäkerhet', 'GDPR för vården', 'NIS2 för hälsosektorn', 'Medicintekniska regelverk'],
  },
];

const tabs = industries.map((ind) => ({ id: ind.id, label: ind.label }));
---

<section class="section bg-surface">
  <div class="container">
    <div class="text-center max-w-2xl mx-auto mb-12" data-reveal>
      <p class="overline mb-3">Branscher</p>
      <h2>Fokus på samhällsviktig verksamhet</h2>
      <p class="lead mt-4">
        Vi arbetar med organisationer där kraven på säkerhet, integritet och förtroende är särskilt höga.
      </p>
    </div>

    <div data-reveal>
      <Tabs tabs={tabs}>
        {industries.map((ind, i) => (
          <div data-panel={ind.id} hidden={i !== 0 ? true : undefined}>
            <div class="grid md:grid-cols-2 gap-8 items-start">
              <div>
                <h3 class="mb-4">{ind.title}</h3>
                <p class="text-gray leading-relaxed">{ind.description}</p>
              </div>
              <div class="bg-white rounded-xl p-6 border border-border">
                <p class="text-sm font-semibold text-navy uppercase tracking-wider mb-4">Relevanta områden</p>
                <ul class="space-y-3">
                  {ind.challenges.map((challenge) => (
                    <li class="flex items-center gap-3 text-sm text-slate">
                      <svg class="w-5 h-5 text-teal shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {challenge}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </Tabs>
    </div>
  </div>
</section>
