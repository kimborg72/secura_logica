---
import Button from '@components/ui/Button.astro';
import type { Locale } from '@i18n/types';
import { t } from '@i18n/index';
import { getSecurapilotPath, getContactPath } from '@i18n/routes';

interface Props {
  locale?: Locale;
}

const { locale = 'sv' } = Astro.props;

const features = [
  t(locale, 'pilot.feature1'),
  t(locale, 'pilot.feature2'),
  t(locale, 'pilot.feature3'),
  t(locale, 'pilot.feature4'),
  t(locale, 'pilot.feature5'),
];
---

<section class="section">
  <div class="container">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Mockup -->
      <div class="relative" data-reveal="left">
        <div class="bg-navy-dark rounded-xl p-6 shadow-2xl">
          <!-- Dashboard mockup -->
          <div class="flex items-center gap-2 mb-4">
            <div class="w-3 h-3 rounded-full bg-red-400/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-400/80"></div>
            <span class="ml-2 text-xs text-white/60 font-mono">app.securapilot.com</span>
          </div>
          <div class="space-y-4">
            <!-- Compliance score -->
            <div class="bg-white/5 rounded-lg p-4">
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm text-white/60">{t(locale, 'pilot.dashboard.score')}</span>
                <span class="text-2xl font-bold text-accent">78%</span>
              </div>
              <div class="w-full h-2 bg-white/10 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-accent to-accent rounded-full w-[78%] transition-all duration-1000"></div>
              </div>
            </div>
            <!-- Mini stats -->
            <div class="grid grid-cols-3 gap-3">
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-teal-light">24</p>
                <p class="text-xs text-white/60">{t(locale, 'pilot.dashboard.controlsOk')}</p>
              </div>
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-accent">8</p>
                <p class="text-xs text-white/60">{t(locale, 'pilot.dashboard.inProgress')}</p>
              </div>
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-white/80">3</p>
                <p class="text-xs text-white/60">{t(locale, 'pilot.dashboard.toFix')}</p>
              </div>
            </div>
            <!-- Activity -->
            <div class="bg-white/5 rounded-lg p-4">
              <p class="text-xs text-white/60 mb-2">{t(locale, 'pilot.dashboard.activity')}</p>
              <div class="space-y-2 text-xs">
                <div class="flex justify-between text-white/60">
                  <span>{t(locale, 'pilot.dashboard.activity1')}</span>
                  <span class="text-white/60">{t(locale, 'pilot.dashboard.activity1Time')}</span>
                </div>
                <div class="flex justify-between text-white/60">
                  <span>{t(locale, 'pilot.dashboard.activity2')}</span>
                  <span class="text-white/60">{t(locale, 'pilot.dashboard.activity2Time')}</span>
                </div>
                <div class="flex justify-between text-white/60">
                  <span>{t(locale, 'pilot.dashboard.activity3')}</span>
                  <span class="text-white/60">{t(locale, 'pilot.dashboard.activity3Time')}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Glow effect -->
        <div class="absolute -inset-4 bg-accent/5 rounded-2xl -z-10 blur-2xl"></div>
      </div>

      <!-- Content -->
      <div data-reveal="right">
        <p class="overline mb-3">{t(locale, 'pilot.overline')}</p>
        <h2 class="mb-6">{t(locale, 'pilot.title')}</h2>
        <p class="lead mb-8">
          {t(locale, 'pilot.description')}
        </p>
        <ul class="space-y-3 mb-10">
          {features.map((feature) => (
            <li class="flex items-start gap-3">
              <svg aria-hidden="true" class="w-5 h-5 text-accent-dark shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate">{feature}</span>
            </li>
          ))}
        </ul>
        <div class="flex flex-wrap gap-4">
          <Button href={getSecurapilotPath(locale)} variant="primary">
            {t(locale, 'pilot.cta')}
          </Button>
          <Button href={getContactPath(locale)} variant="ghost">
            {t(locale, 'pilot.demo')}
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
