---
import Button from '@components/ui/Button.astro';

const features = [
  'Realtids-dashboard för compliance-status',
  'Automatiserad gap-analys mot NIS2 och ISO 27001',
  'Dokumenthantering och policykontroll',
  'Incidentrapportering och uppföljning',
  'Rollbaserad åtkomst och audit trail',
];
---

<section class="section">
  <div class="container">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Mockup -->
      <div class="relative" data-reveal="left">
        <div class="bg-navy-dark rounded-xl p-6 shadow-2xl">
          <!-- Dashboard mockup -->
          <div class="flex items-center gap-2 mb-4">
            <div class="w-3 h-3 rounded-full bg-red-400/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-400/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-400/80"></div>
            <span class="ml-2 text-xs text-white/40 font-mono">securapilot.verit.se</span>
          </div>
          <div class="space-y-4">
            <!-- Compliance score -->
            <div class="bg-white/5 rounded-lg p-4">
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm text-white/60">Compliance Score</span>
                <span class="text-2xl font-bold text-accent">78%</span>
              </div>
              <div class="w-full h-2 bg-white/10 rounded-full overflow-hidden">
                <div class="h-full bg-gradient-to-r from-accent to-accent rounded-full w-[78%] transition-all duration-1000"></div>
              </div>
            </div>
            <!-- Mini stats -->
            <div class="grid grid-cols-3 gap-3">
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-teal-light">24</p>
                <p class="text-xs text-white/40">Kontroller OK</p>
              </div>
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-accent">8</p>
                <p class="text-xs text-white/40">Pågående</p>
              </div>
              <div class="bg-white/5 rounded-lg p-3 text-center">
                <p class="text-lg font-bold text-white/80">3</p>
                <p class="text-xs text-white/40">Att åtgärda</p>
              </div>
            </div>
            <!-- Activity -->
            <div class="bg-white/5 rounded-lg p-4">
              <p class="text-xs text-white/40 mb-2">Senaste aktivitet</p>
              <div class="space-y-2 text-xs">
                <div class="flex justify-between text-white/60">
                  <span>Riskanalys uppdaterad</span>
                  <span class="text-white/30">2 tim sedan</span>
                </div>
                <div class="flex justify-between text-white/60">
                  <span>Policy godkänd: Åtkomstkontroll</span>
                  <span class="text-white/30">5 tim sedan</span>
                </div>
                <div class="flex justify-between text-white/60">
                  <span>NIS2 gap-analys slutförd</span>
                  <span class="text-white/30">Igår</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Glow effect -->
        <div class="absolute -inset-4 bg-accent/5 rounded-2xl -z-10 blur-2xl"></div>
      </div>

      <!-- Content -->
      <div data-reveal="right">
        <p class="overline mb-3">SecuraPilot</p>
        <h2 class="mb-6">Compliance som faktiskt fungerar</h2>
        <p class="lead mb-8">
          SecuraPilot gör ert informationssäkerhetsarbete körbart. Sluta jaga dokument i mappar
          — få realtidsöverblick över compliance-status, risker och åtgärder.
        </p>
        <ul class="space-y-3 mb-10">
          {features.map((feature) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-dark shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-slate">{feature}</span>
            </li>
          ))}
        </ul>
        <div class="flex flex-wrap gap-4">
          <Button href="/securapilot" variant="primary">
            Upptäck SecuraPilot
          </Button>
          <Button href="/kontakt" variant="ghost">
            Boka en demo
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
