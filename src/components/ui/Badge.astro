---
import { cn } from '@utils/cn';

interface Props {
  text: string;
  variant?: 'copper' | 'accent-dark' | 'teal' | 'navy' | 'neutral';
  class?: string;
}

const { text, variant = 'copper', class: className } = Astro.props;

const variants = {
  copper: 'bg-accent/15 text-accent-dark',
  'accent-dark': 'bg-accent/15 text-accent-dark',
  teal: 'bg-teal/10 text-teal',
  navy: 'bg-navy/10 text-navy',
  neutral: 'bg-gray-light/20 text-gray',
};
---

<span class={cn('inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider rounded-full', variants[variant], className)}>
  {text}
</span>
