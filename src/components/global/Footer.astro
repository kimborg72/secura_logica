---
import { getFooterColumns } from '@data/footer';
import { offices } from '@data/offices';
import { site } from '@data/site';
import type { Locale } from '@i18n/types';
import { t, getHomePath } from '@i18n/index';
import { getPrivacyPath } from '@i18n/routes';

interface Props {
  locale?: Locale;
}

const { locale = 'sv' } = Astro.props;
const columns = getFooterColumns(locale);
---

<footer class="bg-navy-dark text-white/80">
  <div class="container section">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Brand column -->
      <div class="lg:col-span-1">
        <a href={getHomePath(locale)} class="inline-block mb-4">
          <img src="/images/logos/logo_verit_dark.png" alt={site.name} style="height: 46px; width: auto;" />
        </a>
        <p class="text-sm leading-relaxed mb-6 text-white/60">
          {t(locale, 'footer.tagline')}
        </p>
        <div class="flex gap-3">
          <a href="https://www.linkedin.com/company/verit" class="w-12 h-12 flex items-center justify-center rounded-lg bg-white/5 hover:bg-white/10 transition-colors" aria-label="LinkedIn" target="_blank" rel="noopener">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>

      <!-- Link columns -->
      {columns.map((column) => (
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{column.title}</h3>
          <ul class="space-y-2.5">
            {column.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-white/60 hover:text-accent underline-offset-2 hover:underline transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Contact column -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">{t(locale, 'footer.offices')}</h3>
        <ul class="space-y-4">
          {offices.map((office) => (
            <li>
              <address class="not-italic">
                <p class="text-sm font-medium text-white">{office.city}</p>
                <p class="text-sm text-white/60">{office.address}</p>
                <p class="text-sm text-white/60">{office.postalCode}</p>
              </address>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-16 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-white/60">
        &copy; {new Date().getFullYear()} VER &amp; IT AB. {t(locale, 'footer.allRights')}.
      </p>
      <div class="flex gap-6 text-sm text-white/60">
        <a href={getPrivacyPath(locale)} class="underline underline-offset-2 decoration-white/30 hover:text-white hover:decoration-white/60 transition-colors">{t(locale, 'footer.privacyPolicy')}</a>
      </div>
    </div>
  </div>
</footer>
